{
  "id": null,
  "uid": "drilldown-dashboard",
  "title": "Environment Detail",
  "tags": ["drilldown"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "pluginId": "prometheus",
        "query": "prometheus",
        "label": "Prometheus Source",
        "refresh": 1
      },
      {
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "datasource": "${datasource}",
        "refresh": 2,
        "query": "label_values(up, instance)",
        "multi": false,
        "includeAll": false
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Request Duration",
      "datasource": "${datasource}",
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum{instance=~\"$instance\"}[1m]) / rate(http_request_duration_seconds_count{instance=~\"$instance\"}[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    }
  ]
}